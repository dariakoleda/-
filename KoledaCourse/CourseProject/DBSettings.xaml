<Window x:Class="CourseProject.DBSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseProject"
        mc:Ignorable="d"
          Title="Подключение к БД" Height="200" Width="450"
            WindowStartupLocation="CenterScreen"
        >
    <Grid>
        <Label Content="Строка подключения:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="30, 30, 0, 0" FontSize="18" Padding="0"/>
        <TextBox x:Name="textBoxConnectionString" VerticalAlignment="Top" Margin="30, 60, 30, 0" FontSize="14"></TextBox>
        <Button x:Name="buttonConnect" Content="Подключиться" VerticalAlignment="Top" Margin="30, 90, 30, 0" FontSize="18" Click="buttonConnect_Click"></Button>
    </Grid>
</Window>