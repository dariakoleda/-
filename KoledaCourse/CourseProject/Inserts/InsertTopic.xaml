<Window x:Class="CourseProject.Inserts.InsertTopic"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseProject.Inserts"
        mc:Ignorable="d"
        Title="Тема" Height="350" Width="300"
        WindowStartupLocation="CenterScreen"
        >
    <Grid>
        <Label Content="Название темы: "  HorizontalAlignment="Stretch" Margin="30" VerticalAlignment="Top" FontSize="16" Padding="0"/>
        <TextBox x:Name="textBoxName" Margin="30, 50, 30, 0" VerticalAlignment="Top" HorizontalAlignment="Stretch" FontSize="14" MaxLength="70"/>
        
        <Label Content="Дата занятия: "  HorizontalAlignment="Stretch" Margin="30,80,0,0" VerticalAlignment="Top" FontSize="16" Padding="0"/>
        <DatePicker x:Name="dataPickerMain" Margin="30,100,30,0" VerticalAlignment="Top" FontSize="14" HorizontalAlignment="Stretch"/>
        
        <Button x:Name="buttonInsert" Content="Добавить" VerticalAlignment="Bottom" FontSize="16" Click="buttonInsert_Click" Margin="30, 0, 30, 30"/>
    </Grid>
</Window>