<Window x:Class="CourseProject.RoleChanger"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseProject"
        mc:Ignorable="d"
        Title="RoleChanger" Height="350" Width="300"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Логин:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30, 30, 30, 0" FontSize="16"/>
        <ComboBox x:Name="comboBoxLogins" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="30, 60, 30, 0" FontSize="14"/>
        
        <Label Content="Роль:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30, 90, 30, 0" FontSize="16"/>
        <ComboBox x:Name="comboBoxRoles" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="30, 120, 30, 0" FontSize="14">
            <ComboBoxItem Content="Гость"/>
            <ComboBoxItem Content="Админ"/>
        </ComboBox>

        <Button x:Name="buttonSubmit" Content="Подтвердить" VerticalAlignment="Bottom" Margin="30, 0, 30, 30" FontSize="18" Click="buttonSubmit_Click"/>
    </Grid>
</Window>
