<Window x:Class="CourseProject.SignUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseProject"
        mc:Ignorable="d"
        Title="Регистрация" Height="350" Width="300"
        WindowStartupLocation="CenterScreen"
        >
    <Grid>
        <Label Content="Логин: " FontSize="16" Margin="30, 20, 0, 0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox x:Name="textBoxLogin" Margin="30, 50, 30, 0" VerticalAlignment="Top" FontSize="14"/>
        
        <Label Content="Пароль: " FontSize="16" Margin="30, 90, 0, 0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <PasswordBox x:Name="passwordBox" Margin="30, 120, 30, 0" VerticalAlignment="Top" FontSize="14"/>
        
        <Label Content="Email: " FontSize="16" Margin="30, 150, 0, 0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox x:Name="textBoxEmail" Margin="30, 180, 30, 0" VerticalAlignment="Top" FontSize="14"/>
        
        <Button x:Name="buttonSignUp" Content="Зарегистрироваться" VerticalAlignment="Top" Margin="30, 240, 30, 30" FontSize="16" Click="buttonSignUp_Click" Cursor="Hand"/>
    </Grid>
</Window>
