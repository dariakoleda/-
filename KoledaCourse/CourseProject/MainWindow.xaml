<Window x:Class="CourseProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseProject"
        mc:Ignorable="d"
        Title="Войти" Height="350" Width="300"
        WindowStartupLocation="CenterScreen"
        >
    <Grid>
        <Label Content="Логин: " FontSize="16" Margin="30, 30, 0, 0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox x:Name="textBoxLogin" Margin="30, 60, 30, 0" VerticalAlignment="Top" FontSize="14"/>
        <Label Content="Пароль: " FontSize="16" Margin="30, 100, 0, 0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <PasswordBox x:Name="passwordBox" Margin="30, 130, 30, 0" VerticalAlignment="Top" FontSize="14"/>
        <Button x:Name="buttonSignUp" Margin="30, 150, 0, 0" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="12" Content="Зарегистрироваться" Background="Transparent" BorderThickness="0" Foreground="Blue" Click="buttonSignUp_Click" Cursor="Hand"/>
        <Button x:Name="buttonSignIn" Content="Войти" VerticalAlignment="Top" Margin="30, 240, 30, 30" FontSize="16" Click="buttonSignIn_Click"  Cursor="Hand"/>
    </Grid>
</Window>
