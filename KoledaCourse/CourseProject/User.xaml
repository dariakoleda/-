<Window x:Class="CourseProject.User"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseProject"
        mc:Ignorable="d"
        Title="User" Height="350" Width="300"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        >
    <Grid>
        <Label Content="Логин: " FontSize="16" Margin="30, 20, 0, 0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label x:Name="labelLogin" Margin="30, 50, 30, 0" VerticalAlignment="Top" FontSize="14" Background="LightGray"/>

        <Label Content="Роль: " FontSize="16" Margin="30, 90, 0, 0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label x:Name="labelRole" Margin="30, 120, 30, 0" VerticalAlignment="Top" FontSize="14" Background="LightGray"/>

        <Label Content="Email: " FontSize="16" Margin="30, 160, 0, 0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label x:Name="labelEmail" Margin="30, 190, 30, 0" VerticalAlignment="Top" FontSize="14" Background="LightGray"/>
    </Grid>
</Window>
